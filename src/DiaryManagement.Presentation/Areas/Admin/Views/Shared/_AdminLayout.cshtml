@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin - @ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">

    <link rel="stylesheet" href="/lib/admin/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/admin/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/lib/admin/themify-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/lib/admin/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="/lib/admin/selectFX/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="/lib/admin/jqvmap/dist/jqvmap.min.css">
    <link rel="stylesheet" href="/css/admin/style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

</head>

<body>
    <aside id="left-panel" class="left-panel bg-secondary bg-gradient
">
        <nav class="navbar navbar-expand-sm navbar-default bg-secondary bg-gradient">

            <div class="navbar-header">
                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>*@
                <a class="navbar-brand" asp-area="Admin" asp-controller="Admin" asp-action="Index">Tell Ya Admin</a>
                <a class="navbar-brand hidden" href="./"><img src="" alt="Logo"></a>
            </div>

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="Index"> <i class="menu-icon fa fa-area-chart"></i>Dashboard </a>
                    </li>

                    <h3 class="menu-title">Catalogs</h3>
                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="GetAllUsers" > 
                            <i class="menu-icon fa fa-address-card"></i>
                            Users
                        </a>
                    </li>
                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="GetAllDiarys">
                            <i class="menu-icon fa fa-clipboard"></i>
                            Diarys
                        </a>
                    </li>

                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="GetAllCategories">
                            <i class="menu-icon fa fa-compass"></i>
                            Blog Types
                        </a>
                    </li>

                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="GetAllWriters">
                            <i class="menu-icon fa fa-pencil"></i>
                            Writers
                        </a>
                    </li>
                    <h3 class="menu-title">Actions</h3>
                    <li class="active">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="Logout">
                            <i class="menu-icon fa fa-sign-out"></i>
                            Logout
                        </a>
                    </li>
                    
                   
                </ul>
            </div>
        </nav>
    </aside>
   

    <div id="right-panel" class="right-panel bg-dark">
        <header id="header" class="header bg-info bg-gradient
">

            <div class="header-menu">

                @*<div class="col-sm-7">
                    <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                </div>*@

                <div class="col-sm-5">
                    <div class="user-area dropdown float-right">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </header>
        @RenderBody();
        <script src="/lib/admin/jquery/dist/jquery.min.js"></script>
        <script src="/lib/admin/popper.js/dist/umd/popper.min.js"></script>
        <script src="/lib/admin/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="/js/admin/main.js"></script>
        <script src="/lib/admin/chart.js/dist/Chart.bundle.min.js"></script>
        <script src="/js/admin/js/dashboard.js"></script>
        <script src="/js/admin/js/widgets.js"></script>
        <script src="/lib/admin/jqvmap/dist/jquery.vmap.min.js"></script>
        <script src="/lib/admin/jqvmap/examples/js/jquery.vmap.sampledata.js"></script>
        <script src="/lib/admin/jqvmap/dist/maps/jquery.vmap.world.js"></script>
       
        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
