@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DiaryManagement.Application.Dtos.WriterDto;
@{

    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Writer";
}
<div class="row justify-content-center mt-5">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header text-center">
                <h3>Add new Writer</h3>
            </div>
            <form class="card-body card-block" method="post" asp-area="Admin" asp-controller="Admin"
                asp-action="AddWriter">
                <div class="has-success form-group">
                    <label for="inputSuccess2i" class=" form-control-label"><strong>Writer Name:</strong></label>
                    <input asp-for="WriterName" type="text" id="inputSuccess2i" placeholder="input...."
                        class="form-control-success form-control">
                    <span class="text-danger" asp-validation-for="WriterName"></span>
                    <span class="text-danger">@ViewBag.AddAuthMsg</span>
                </div>

                <div class="text-center">
                    <!-- Center the button -->
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>